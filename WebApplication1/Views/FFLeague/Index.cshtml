@model Dictionary<WebApplication1.Models.FFTeam,WebApplication1.Models.FFLeague>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@Html.ActionLink("Have a League ID and need to join your league? Click Here", "JoinLeague")
@foreach (var item in Model) {
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => item.Key.TeamName)
            </th>
            <th>
                @Html.DisplayNameFor(model => item.Key.FFTeamID)
            </th>
            <th>
                @Html.DisplayNameFor(model => item.Value.FFLeagueName)
            </th>
            <th>
                @Html.DisplayNameFor(model => item.Value.NumberOfTeams)
            </th>
        </tr>


        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Key.TeamName)
            </td>
            <td>
                @Html.DisplayFor(model => item.Key.FFTeamID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Value.FFLeagueName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Value.NumberOfTeams)
            </td>
            <td>
                <input type="button" class="btn btn-default" value="Go" onclick="location.href='@Url.Action("Index", "FFTeams", new { TeamID = item.Key.FFTeamID })'" />
            </td>
        </tr>
    </table>
}
