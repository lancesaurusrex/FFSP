@model IList<NFLPlayer>
@{
    ViewBag.Title = "Available Players";
}

<h2>Available Players</h2>

@using (Html.BeginForm("AvailablePlayers", "FFTeams")) {
    @Html.AntiForgeryToken()

    var altRow = false;

    foreach (var item in Model) {
        <table>
            <tr style="color: #000;">            
                <td style="background-color:@(altRow ? "#1affff" : "#ffff1a"); height:40px;width:100px;">
                    @Html.CheckBoxFor(x => item.isChecked, new { @Name = item.id })
                </td>
                <td style="background-color:@(altRow ? "#1affff" : "#ffff1a"); height:40px;width:200px;">
                    @Html.DisplayFor(modelItem => item.name)
                    @Html.DisplayFor(modelItem => item.team)
                </td>
                @{altRow = !altRow;}
            </tr>
        </table>
    
    }
     <input type=hidden name="TeamID" value="ViewBag.TeamID"/>
    <input type="submit" class="btn btn-default" value="GO" />
}


