@model WebApplication1.Models.FFGame


@section Scripts
{
    <!--Script references. -->
    <!--Reference the jQuery library. -->
    <script src="~/Scripts/jquery-2.2.1.min.js"></script>
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.2.0.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>

    <script id="RunLive.js" src="@Url.Content("~/Scripts/RunLive.js")"
        data-gid="@Model.FFGameID">
</script>
}

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Live Scoring for </title>
    <style>
        body {
            font-family: 'Segoe UI', Arial, Helvetica, sans-serif;
            font-size: 16px;
        }

        #playerTable table {
            border-collapse: collapse;
        }

            #playerTable table th, #playerTable table td {
                padding: 2px 6px;
            }

            #playerTable table td {
                text-align: right;
            }

        #playerTable .loading td {
            text-align: left;
        }
    </style>
</head>

<body>
    <h1>
        @Html.DisplayFor(x => x.VisTeam.TeamName) at @Html.DisplayFor(x => x.HomeTeam.TeamName)
    </h1>
    <h2>
        @Html.DisplayFor(x => x.VisTeamID) at @Html.DisplayFor(x => x.HomeTeamID)
    </h2>

    <ul id="plays" class="round"></ul>
    <ol id="plays2" class="round"></ol>
    <br />
    <div id="awayPlayerTable" style="float: right; width:50%">
        <table border="1">
            <caption>@Model.VisTeam.TeamName</caption>
            <thead>
                <tr><th>Name</th><th>Team</th><th>Pts</th><th>Pass<br />Yds</th><th>Pass<br />TDs</th><th>INT</th><th>Rush<br />Yds</th><th>Rush<br />TDs</th><th>Rec<br />Yds</th><th>Rec<br />TDs</th></tr>
            </thead>
            <tbody>
                <tr class="loading"><td>loading...</td></tr>
            </tbody>
        </table>
    </div>
    <div id="homePlayerTable" style="float: right; width:50%">
        <table border="1">
            <caption>@Model.HomeTeam.TeamName</caption>
            <thead>
                <tr><th>Name</th><th>Team</th><th>Pts</th><th>Pass<br />Yds</th><th>Pass<br />TDs</th><th>INT</th><th>Rush<br />Yds</th><th>Rush<br />TDs</th><th>Rec<br />Yds</th><th>Rec<br />TDs</th></tr>
            </thead>
            <tbody>
                <tr class="loading"><td>loading...</td></tr>
    </tbody>
    </table>
    </div>
</body>
</html>
