@model IEnumerable<WebApplication1.Models.FFTeam>

@{
    ViewBag.Title = "View";
}

<h2>@Model.First().FFLeague.FFLeagueName Standings</h2>

Teams Needed in League = @Model.First().FFLeague.NumberOfTeams
Number of Teams in League = @Model.First().FFLeague.Teams.Count()

@{var TeamsNeeded = (@Model.First().FFLeague.NumberOfTeams - @Model.First().FFLeague.Teams.Count());}
Teams Needed to Complete League = @TeamsNeeded

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TeamName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Win)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Lose)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tie)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FPTotal)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TeamName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Win)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Lose)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tie)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FPTotal)
        </td>
    </tr>
}

</table>
